<p id="notice"><%= notice %></p>

<h2>Listing Shops</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>店名</th>
      <th>住所</th>
      <th>Tel</th>
      <th>ホームページ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>
        <td><%= shop.address %></td>
        <td><%= shop.tel %></td>
        <td><%= shop.url %></td>
        <td><%= link_to 'Show', shop %></td>
        <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
        <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規登録', new_shop_path, class: "btn btn-default" %>

<p id="notice"><%= notice %></p>

<h2>店舗一覧</h2>

<table class="table table-striped" style="width:100%;">
  <tbody>
    <tr>
      <th style="width:70%;">店名</th>
      <th colspan="3" style="width:30%;"></th>
    </tr>
    <% @shops.each do |shop| %>
    <tr>
      <td><%= shop.name %></td>
      <td><%= link_to '詳細情報', shop, class: "btn btn-default btn-xs" %></td>
      <td><%= link_to '店舗情報編集', edit_shop_path(shop), class: "btn btn-default btn-xs" %></td>
      <td><%= link_to 'お店を削除する', shop, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-xs" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'お店を登録する', new_shop_path, class: "btn btn-default" %>
